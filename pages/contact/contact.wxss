/* pages/contact/contact.wxss */
.container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding: 32rpx;
  padding-bottom: 160rpx;
}

/* 页面头部 */
.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 24rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  display: block;
}

/* 表单容器 */
.form-container {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 表单组 */
.form-group {
  margin-bottom: 48rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1f2937;
  background-color: #ffffff;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #ff6b6b;
  outline: none;
}

.form-input::placeholder {
  color: #9ca3af;
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx 32rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1f2937;
  background-color: #ffffff;
  box-sizing: border-box;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: #ff6b6b;
  outline: none;
}

.form-textarea::placeholder {
  color: #9ca3af;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

/* 图片上传容器 */
.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.uploaded-images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  width: 100%;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #ef4444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.delete-icon {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

/* 上传按钮 */
.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f9fafb;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background-color: #f3f4f6;
  border-color: #9ca3af;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 4rpx;
}

.upload-limit {
  font-size: 20rpx;
  color: #9ca3af;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:not(.submitting):active {
  background: linear-gradient(135deg, #ee5a52 0%, #dc2626 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.submit-btn.submitting {
  background: #9ca3af;
  box-shadow: none;
  transform: none;
}

.submit-btn[disabled] {
  background: #9ca3af;
  box-shadow: none;
}

/* 其他联系方式 */
.contact-methods {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.methods-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 32rpx;
  display: block;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.3s ease;
}

.method-item:last-child {
  border-bottom: none;
}

.method-item:active {
  background-color: #f9fafb;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.wechat-icon {
  background-color: #e8f5e8;
}

.email-icon {
  background-color: #e8f4fd;
}

.method-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.method-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #6b7280;
}

.method-arrow {
  font-size: 32rpx;
  color: #9ca3af;
  margin-left: 16rpx;
}
