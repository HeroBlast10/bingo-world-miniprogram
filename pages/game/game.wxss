/* pages/game/game.wxss */

/* 全局字体设置 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.container {
  background-color: #f9fafb;
  min-height: 100vh;
  padding-bottom: 240rpx; /* 为底部导航栏和tabBar留出空间 */
  font-family: inherit;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #9ca3af;
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

/* 游戏内容 */
.game-content {
  padding: 0 32rpx 32rpx 32rpx; /* 完全移除顶部padding */
}

/* 游戏头部 */
.game-header {
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 24rpx;
  padding: 24rpx 32rpx; /* 减少垂直padding */
  margin: 16rpx 0 24rpx 0; /* 减少上下margin */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

/* 小程序标识 */
.app-brand {
  display: block;
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 12rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 标题行，包含标题和修改按钮 */
.title-row {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 8rpx;
}

.game-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.3;
  letter-spacing: 0.5rpx;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  text-align: center;
  flex: 1;
}

/* 修改按钮样式 */
.edit-button {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx !important;
  padding: 0 16rpx !important;
  border-radius: 20rpx !important;
  line-height: 56rpx !important;
  min-width: 80rpx !important;
  height: 56rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.complete-button {
  background-color: #10b981 !important;
  color: white !important;
}

.game-description {
  display: block;
  font-size: 30rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-top: 4rpx; /* 减少上边距 */
  padding: 12rpx; /* 减少padding */
  background-color: #f8fafc;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6b6b;
  font-weight: 400;
  letter-spacing: 0.3rpx;
}

/* 宾果容器 */
.bingo-container {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx; /* 减少padding */
  margin: 0 0 32rpx 0; /* 移除上边距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 网格容器 - 实现 grid-template-columns: repeat(5, 1fr) */
.grid-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 8rpx;
  width: 100%;
}

/* 网格行 */
.grid-row {
  display: contents; /* 让子元素直接参与网格布局 */
}

/* 单元格基础样式 */
.cell {
  aspect-ratio: 1; /* 保持正方形 */
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  background-color: #ffffff;
  transition: all 0.2s ease;
  box-sizing: border-box;
  cursor: pointer;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  position: relative; /* 为编辑图标定位做准备 */
}

/* 编辑模式下的单元格样式 */
.cell.edit-mode {
  border: 2rpx solid #3b82f6;
  background-color: #eff6ff;
}

.cell:active {
  transform: scale(0.95);
}

/* 单元格选中样式 */
.cell.selected {
  background-color: #ff6b6b;
  border-color: #ff6b6b;
}

/* 不同颜色主题的选中样式 */
.cell.selected-coral {
  background-color: #ff6b6b;
  border-color: #ff6b6b;
}

.cell.selected-blue {
  background-color: #3b82f6;
  border-color: #3b82f6;
}

.cell.selected-purple {
  background-color: #8b5cf6;
  border-color: #8b5cf6;
}

.cell.selected-green {
  background-color: #10b981;
  border-color: #10b981;
}

.cell.selected-pink {
  background-color: #ec4899;
  border-color: #ec4899;
}

.cell.selected-orange {
  background-color: #f59e0b;
  border-color: #f59e0b;
}

.cell.selected .cell-text {
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 单元格文本 */
.cell-text {
  font-size: 22rpx;
  text-align: center;
  line-height: 1.3;
  color: #374151;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-weight: 500;
  letter-spacing: 0.2rpx;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 根据文字长度自动调整字体大小的类 */
.cell-text.text-short {
  font-size: 22rpx;
}

.cell-text.text-medium {
  font-size: 20rpx;
}

.cell-text.text-long {
  font-size: 18rpx;
}

.cell-text.text-very-long {
  font-size: 16rpx;
}

/* 编辑图标样式 */
.edit-icon {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 16rpx;
  line-height: 1;
  opacity: 0.7;
  pointer-events: none;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 100rpx; /* 在tabBar上方 */
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 16rpx 0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  cursor: pointer;
}

.nav-item:active {
  background-color: #f3f4f6;
  transform: scale(0.95);
}

.nav-icon {
  font-size: 48rpx;
  margin-bottom: 4rpx;
  line-height: 1;
}

.nav-text {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
  letter-spacing: 0.3rpx;
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .bottom-nav {
    padding: 12rpx 0;
  }

  .nav-icon {
    font-size: 40rpx;
  }

  .nav-text {
    font-size: 24rpx;
    letter-spacing: 0.2rpx;
  }

  .game-title {
    font-size: 36rpx;
  }

  .game-description {
    font-size: 28rpx;
  }

  .cell-text {
    font-size: 20rpx;
  }
}
