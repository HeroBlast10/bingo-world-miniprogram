/* pages/me/me.wxss */
.container {
  background-color: #f0f2f5;
  min-height: 100vh;
  padding: 32rpx 32rpx 160rpx 32rpx; /* 减少顶部padding，底部留出tabBar空间 */
  box-sizing: border-box;
  width: 100%;
}

/* 用户信息区域 */
.user-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 140rpx;
}

/* 未登录状态 - 优化后的设计 */
.login-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 登录头部区域 */
.login-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.login-avatar-container {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
}

.login-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
  opacity: 0.8;
}

.login-avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(7, 193, 96, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-avatar-icon {
  font-size: 32rpx;
}

.login-welcome {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.2;
}

.login-subtitle {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.3;
}

/* 登录内容区域 */
.login-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 登录操作区域 */
.login-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
}

.login-btn {
  width: 100%;
  border: none;
  border-radius: 48rpx;
  padding: 28rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.login-btn.primary {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.login-btn.primary:active {
  background: linear-gradient(135deg, #06ad56 0%, #059652 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
}

.login-btn-icon {
  font-size: 24rpx;
  line-height: 1;
}

.login-btn-text {
  line-height: 1;
}

/* 已登录状态 - 全新设计 */
.logged-in-container {
  width: 100%;
}

/* 使用三列网格，避免重叠：头像 | 详情 | 按钮 */
.user-row {
  display: grid;
  grid-template-columns: 80rpx 1fr auto;
  column-gap: 24rpx;
  align-items: start;
  width: 100%;
  padding: 0;
  margin: 0;
}

/* 头像区域 - 固定宽度 */
.avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  flex-shrink: 0;
}

/* 圆形头像本体 */
.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  background-color: #eee;
}

/* 透明覆盖按钮用于触发 chooseAvatar，不影响形状 */
.avatar-chooser {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;           /* 完全透明 */
  border: none;
  background: transparent;
}
.avatar-chooser::after {
  border: none;
}

.status-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  background-color: #10b981;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

/* 用户详情区域 - 弹性宽度 */
.user-details {
  min-width: 0;
  margin-right: 0;
  padding-top: 6rpx;
  display: flex;
  flex-direction: column;
}

.name-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}

.user-name-input {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  border: none;
  background: transparent;
  padding: 4rpx 0;
  margin: 0;
  width: 100%;
  min-width: 0;
  line-height: 1.3;
}

.user-name-input::placeholder {
  color: #9ca3af;
  font-weight: normal;
}

.user-description {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.2;
}

/* 退出按钮区域 - 固定宽度 */
.logout-wrapper {
  align-self: start;
  padding-top: 6rpx;
}

.logout-button {
  font-size: 22rpx;
  color: #ef4444;
  padding: 8rpx 16rpx;
  border: 1rpx solid #ef4444;
  border-radius: 20rpx;
  background: transparent;
  white-space: nowrap;
}

/* 统计数据区域 */
.stats-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  box-sizing: border-box;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #6b7280;
}

/* 功能菜单区域 */
.menu-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 48rpx;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s ease;
  width: 100%;
  box-sizing: border-box;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9fafb;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-orange {
  background-color: #fed7aa;
}

.icon-blue {
  background-color: #dbeafe;
}

.icon-green {
  background-color: #d1fae5;
}

.icon-gray {
  background-color: #f3f4f6;
}

.menu-icon-text {
  font-size: 36rpx;
  color: #1f2937;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-text {
  font-size: 32rpx;
  color: #d1d5db;
}

/* 版本信息 */
.version-section {
  text-align: center;
  padding: 32rpx;
}

.version-text {
  font-size: 24rpx;
  color: #9ca3af;
}