/* pages/category/category.wxss */
.container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding-bottom: 160rpx; /* 为底部tabBar留出空间 */
  width: 100vw; /* 使用视口宽度确保占满屏幕 */
  box-sizing: border-box;
  margin: 0;
  padding-left: 0;
  padding-right: 0;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #9ca3af;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  text-align: center;
  padding: 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #9ca3af;
}

/* 游戏列表 */
.games-list {
  padding: 24rpx 0 160rpx 0; /* 完全移除左右padding */
  width: 100vw; /* 使用视口宽度 */
  box-sizing: border-box;
  margin: 0;
  position: relative;
  left: 0;
  right: 0;
}

.game-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%; /* 确保游戏列表占满容器宽度 */
  padding: 0 20rpx; /* 在列表级别添加适当padding */
  box-sizing: border-box;
  margin: 0;
}

/* 游戏卡片包装器 */
.game-card-wrapper {
  display: block;
  text-decoration: none;
  width: 100%; /* 占满列表宽度 */
  margin: 0; /* 移除所有margin */
  box-sizing: border-box;
}

/* 游戏卡片 */
.game-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx; /* 增加内边距，补偿减少的外边距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  width: 100% !important; /* 强制占满包装器宽度 */
  min-height: 120rpx; /* 设置最小高度保证一致性 */
  box-sizing: border-box; /* 包含padding和border在宽度内 */
  margin: 0 !important; /* 强制移除任何margin */
}

.game-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 游戏内容 */
.game-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%; /* 确保占满卡片宽度 */
  justify-content: center; /* 垂直居中内容 */
}

/* 游戏标题 */
.game-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.3;
  word-wrap: break-word; /* 长标题换行 */
  overflow-wrap: break-word;
}

/* 游戏描述 */
.game-description {
  font-size: 22rpx;
  color: #6b7280;
  line-height: 1.4;
  word-wrap: break-word; /* 长描述换行 */
  overflow-wrap: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 限制最多显示2行 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}