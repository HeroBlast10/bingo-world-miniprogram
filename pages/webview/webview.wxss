/* pages/webview/webview.wxss */
.webview-container {
  height: 100vh;
  width: 100%;
}

.loading-container {
  height: 100vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.loading-content {
  text-align: center;
}

.loading-text {
  font-size: 16px;
  color: #666;
  display: block;
  margin-bottom: 10px;
}

.loading-tip {
  font-size: 12px;
  color: #999;
  display: block;
}
