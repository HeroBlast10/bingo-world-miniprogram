/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 主色调 */
.primary-color {
  color: #ff6b6b;
}

.primary-bg {
  background-color: #ff6b6b;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 16rpx;
  padding: 32rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #ff6b6b;
  color: #ffffff;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-primary:active {
  background-color: #ff5252;
}

/* 搜索框样式 */
.search-bar {
  background-color: #f0f0f0;
  border-radius: 50rpx;
  padding: 24rpx 32rpx;
  margin: 32rpx;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  outline: none;
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 分类网格 */
.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  padding: 32rpx;
}

.category-item {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.category-item:active {
  transform: scale(0.98);
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

/* Bingo网格样式 */
.bingo-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 8rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  margin: 32rpx;
}

.bingo-cell {
  aspect-ratio: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  font-size: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
  background-color: #ffffff;
}

.bingo-cell.selected {
  background-color: #ff6b6b;
  color: #ffffff;
  border-color: #ff6b6b;
}

.bingo-cell.free {
  background-color: #ff6b6b;
  color: #ffffff;
  border-color: #ff6b6b;
}

.bingo-cell:active {
  transform: scale(0.95);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top: 1rpx solid #e0e0e0;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-around;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666666;
  font-size: 24rpx;
}

.action-btn.active {
  color: #ff6b6b;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}
